<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#c3c3c3"
    tools:context="com.example.samsung.mypic1.Alert">

    <ImageView
        android:contentDescription="@string/logo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logonabdi"
        android:id="@+id/imageViewLogo"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/audio"
        android:id="@+id/alarmPic"
        android:layout_marginTop="100dp"
        android:layout_alignTop="@+id/imageViewLogo"
        android:layout_centerHorizontal="true"
        android:contentDescription="Alert" />

    <TextView
        android:text="Notifying Emergency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="2.6"
        android:scaleY="1.6"
        android:id="@+id/Notifing"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/alarmPic"
        android:layout_marginTop="9dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/location"
        android:id="@+id/LocationPic"
        android:layout_marginStart="60dp"
        android:layout_marginTop="390dp"
        android:contentDescription="Pin Pic" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/phone"
        android:id="@+id/CallPic"
        android:layout_marginStart="60dp"
        android:layout_marginTop="460dp"
        android:layout_alignParentStart="true"
        android:contentDescription="phone pic" />


    <TextView
        android:text="Location Status..."
        android:layout_toEndOf="@id/LocationPic"
        android:layout_marginTop="400dp"
        android:layout_marginStart="20dp"
        android:textSize="25sp"
        android:layout_width="1000dp"
        android:layout_height="60dp"
        android:id="@+id/LocationText"
        android:background="#c3c3c3" />

    <TextView
        android:text="Call Me..."
        android:layout_marginTop="10dp"
        android:layout_marginStart="130dp"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:id="@+id/CallMe"
        android:background="#c3c3c3"
        android:textSize="25sp"
        android:layout_below="@+id/LocationText"
        />

    <Button

        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/escorts"
        android:background="@drawable/user"
        android:backgroundTint="#FFFFFF"
        android:layout_alignBottom="@+id/Measure"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="14dp" />


    <TextView
        android:text="Measure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView4"
        android:textSize="20sp" />

    <TextView
        android:text="Escorts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignEnd="@+id/escorts"
        android:id="@+id/textView5"
        android:textSize="20sp" />

    <TextView
        android:text="Alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/alarPic"
        android:layout_marginEnd="14dp"
        android:textSize="20sp"
        android:layout_toEndOf="@+id/alarmPic" />

    <Button

        android:layout_width="77dp"
        android:layout_height="89dp"
        android:id="@+id/Measure"
        android:background="@drawable/m2"
        android:backgroundTint="#FFFFFF"
        android:layout_above="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <Button

        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/alarPic"
        android:background="@drawable/alert122"
        android:layout_marginStart="360dp"
        android:layout_marginTop="597dp"/>





</RelativeLayout>
