<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#c3c3c3"
    tools:context="com.example.samsung.mypic1.Alert">

    <ImageView
        android:contentDescription="@string/logo"
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logonabdi"
        android:id="@+id/imageViewLogo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/audio"
        android:id="@+id/alarmPic"
        android:contentDescription="Alert"
        android:layout_below="@+id/imageViewLogo"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Notifying Emergency"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:scaleX="2.6"
        android:scaleY="1.6"
        android:id="@+id/Notifing"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/alarmPic"
        android:layout_marginTop="9dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/location"
        android:id="@+id/LocationPic"
        android:layout_alignParentStart="true"
        android:layout_marginTop="250dp"
        android:contentDescription="Pin Pic"
        android:layout_alignStart="@+id/Notifing"
        />


    <TextView
        android:hint="Location Status..."
        android:layout_toEndOf="@id/LocationPic"
        android:layout_marginTop="280dp"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LocationText"
        android:background="#c3c3c3" />

    <Button
        android:id="@+id/LoginButton"
        android:layout_width="165dp"
        android:layout_height="37dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"
        android:onClick="displayProfile"
        android:scaleX="1.4"
        android:scaleY="1.5"
        android:text="@string/next_"
        android:textColor="#d22222"
        android:textSize="14sp" />

</RelativeLayout>
