<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#c3c3c3"
    tools:context="com.example.samsung.mypic1.HeartRate">

    <ImageView
        android:contentDescription="@string/logo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logonabdi"
        android:id="@+id/imageViewLogo"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

<ImageButton
android:id="@+id/imageButton2"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
app:srcCompat="@drawable/heart_rate_in_smartwatch"
android:layout_marginEnd="40dp"
android:layout_below="@+id/imageViewLogo"
android:layout_alignParentEnd="true"
android:layout_marginTop="8dp" />

<TextView
android:id="@+id/textView2"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignBottom="@+id/imageButton2"
android:layout_centerHorizontal="true"
android:layout_marginBottom="18dp"
android:text="Start heart rate"
android:textSize="25sp" />

<EditText
android:id="@+id/editText"
android:layout_width="50dp"
android:layout_height="wrap_content"
android:layout_marginTop="19dp"
android:ems="10"
android:hint="00"
android:inputType="number"
android:textSize="30sp"
android:layout_below="@+id/textView2"
android:layout_alignStart="@+id/textView2"
android:layout_marginStart="11dp" />

<TextView
android:id="@+id/textView3"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="bpm"
android:textSize="30sp"
android:layout_alignBottom="@+id/editText"
android:layout_toEndOf="@+id/editText"
android:layout_marginStart="12dp" />

<ImageView
android:id="@+id/imageView2"
android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:scaleType="fitXY"
app:srcCompat="@drawable/d"
   android:layout_marginTop="300dp" />

<Button
android:layout_width="70dp"
android:layout_height="70dp"
android:id="@+id/escoet"
android:background="@drawable/user"
android:backgroundTint="#FFFFFF"
    android:layout_alignParentBottom="true"
    android:layout_marginStart="27dp"
    android:layout_marginBottom="24dp" />


<Button

android:id="@+id/Measure"
android:layout_width="77dp"
android:layout_height="80dp"
    android:background="@drawable/m2"
android:backgroundTint="#FFFFFF"
    android:layout_alignTop="@+id/escoet"
    android:layout_centerHorizontal="true" />


<Button

android:layout_width="70dp"
android:layout_height="70dp"
android:id="@+id/alarPic"
android:background="@drawable/alert122"
    android:layout_alignTop="@+id/Measure"
    android:layout_alignStart="@+id/imageButton2" />

<TextView
android:text="Escorts"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:id="@+id/textView5"
android:textSize="20sp"
android:layout_below="@+id/escoet"
android:layout_alignEnd="@+id/escoet" />


<TextView
android:text="Measure"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:id="@+id/textView4"
android:textSize="20sp"
android:layout_alignStart="@+id/Measure"
android:layout_below="@+id/Measure" />


<TextView
android:text="Alert"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:id="@+id/textView6"
android:layout_marginEnd="12dp"
android:textSize="20sp"
android:layout_alignBaseline="@+id/textView4"
android:layout_alignBottom="@+id/textView4"
android:layout_alignEnd="@+id/alarPic" />


<ImageView
android:id="@+id/imageView3"
android:layout_width="30dp"
android:layout_height="30dp"
android:layout_above="@+id/textView3"
android:layout_alignStart="@+id/textView3"
android:layout_marginBottom="6dp"
android:scaleType="fitXY"
app:srcCompat="@drawable/heart" />

    </RelativeLayout>
