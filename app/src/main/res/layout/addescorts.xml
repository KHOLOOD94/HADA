<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#c3c3c3"
    tools:context="com.example.samsung.mypic1.AddEscorts">

    <ImageView
        android:layout_width="450px"
        android:layout_height="450px"
        app:srcCompat="@drawable/glb"
        android:id="@+id/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"  />

    <TextView
        android:text="Add Escorts"
        android:textSize="4mm"
        android:scaleX="2.6"
        android:scaleY="1"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewEsc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:clickable="true"
        android:id="@+id/textViewAddEscorts" />


    <Button

        android:layout_width="70dp"
        android:layout_height="50dp"
        android:id="@+id/escorts"
        android:background="@drawable/user"
        android:backgroundTint="#FFFFFF"
        android:layout_alignBottom="@+id/Measure"
        android:layout_toStartOf="@+id/imageViewEsc"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="14dp" />


    <TextView
        android:text="Measure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView4"
        android:textSize="20sp" />

    <TextView
        android:text="ecscorts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignEnd="@+id/escorts"
        android:id="@+id/textView5"
        android:textSize="20sp" />

    <TextView
        android:text="alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/alarPic"
        android:layout_marginEnd="10dp"
        android:textSize="20sp" />

    <Button

        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/Measure"
        android:background="@drawable/m2"
        android:backgroundTint="#FFFFFF"
        android:layout_above="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <ImageView
        android:layout_width="250px"
        android:layout_height="150px"
        app:srcCompat="@drawable/mobilepic"
        android:id="@+id/imageViewPhone"
        android:layout_above="@+id/Measure"
        android:layout_toStartOf="@+id/editTextPhone" />

    <ImageView
        android:layout_width="250px"
        android:layout_height="150px"
        app:srcCompat="@drawable/email1"
        android:id="@+id/imageViewEmail"
        android:layout_above="@+id/imageViewPhone"
        android:layout_alignStart="@+id/imageViewPhone"
        android:layout_marginBottom="11dp" />

    <ImageView
        android:layout_width="250px"
        android:layout_height="150px"
        app:srcCompat="@drawable/person"
        android:id="@+id/imageViewUser"
        android:layout_above="@+id/imageViewEmail"
        android:layout_alignStart="@+id/imageViewEmail"
        android:layout_marginBottom="6dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint=" name"
        android:layout_marginEnd="17dp"
        android:id="@+id/editTextName"
        android:layout_alignTop="@+id/imageViewUser"
        android:layout_alignEnd="@+id/textView6"
        android:layout_marginTop="8dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:background="#FFFFFF"
        android:hint=" email"
        android:ems="10"
        android:id="@+id/editTextEmail"
        android:layout_alignTop="@+id/imageViewEmail"
        android:layout_alignStart="@+id/editTextName"
        android:layout_marginTop="9dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NABDHI"
        android:textSize="4mm"
        android:id="@+id/nabdhi"
        android:layout_marginBottom="42dp"
        android:layout_alignBottom="@+id/logo"
        android:layout_alignEnd="@+id/textView4"
        android:layout_marginEnd="7dp" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/escorts"
        android:id="@+id/imageViewEsc"
        android:layout_alignTop="@+id/nabdhi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />

    <Button

        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/alarPic"
        android:background="@drawable/alert122"
        android:layout_marginStart="15dp"
        android:layout_alignBottom="@+id/escorts"
        android:layout_toEndOf="@+id/imageViewEsc" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:inputType="phone"
        android:hint="phone"
        android:ems="10"
        android:layout_marginTop="9dp"
        android:id="@+id/editTextPhone"
        android:layout_below="@+id/imageViewEmail"
        android:layout_alignStart="@+id/editTextEmail" />
</RelativeLayout>
