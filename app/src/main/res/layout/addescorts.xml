<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#c3c3c3"
    tools:context="com.example.samsung.mypic1.AddEscorts">

    <ImageView
        android:contentDescription="@string/logo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logonabdi"
        android:id="@+id/imageViewLogo"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:contentDescription="add escorts pic "
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/addesc"
        android:id="@+id/imageViewEsc"
        android:layout_alignTop="@+id/imageViewLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />
    <TextView
        android:text="Enter your emergency contact"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:scaleX="2.6"
        android:scaleY="1.6"
        android:id="@+id/Notifing"
        android:textSize="9sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="230dp"
        android:layout_marginStart="116dp"/>
    <ImageView
        android:contentDescription="person picture"
        android:layout_width="40dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/person"
        android:id="@+id/imageViewUser"
        android:layout_marginTop="290dp"
        android:layout_marginStart="10dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:inputType="text"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint=" Enter name"
        android:id="@+id/editTextName"
        android:layout_marginTop="290dp"
        android:layout_centerHorizontal="true"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:inputType="phone"
        android:background="#FFFFFF"
        android:hint=" Enter phone number"
        android:ems="10"
        android:id="@+id/editTextPhone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="340dp" />


    <ImageView
        android:contentDescription="phone picture"
        android:layout_width="40dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/mobilepic"
        android:id="@+id/imageViewPhone"
        android:layout_marginTop="340dp"
        android:layout_marginStart="10dp"
         />

    <Button
        android:id="@+id/buttonAddEscorts"
        android:layout_width="165dp"
        android:layout_height="37dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="390dp"
        android:onClick="addEscorts"
        android:scaleX="1.3"
        android:scaleY="1.2"
        android:text=" Add Escort "
        android:textColor="#d22222"
        android:textSize="12sp" />
    


</RelativeLayout>
