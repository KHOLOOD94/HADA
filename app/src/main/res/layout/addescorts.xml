<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#c3c3c3"
    tools:context="com.example.samsung.mypic1.AddEscorts">

    <ImageView
        android:contentDescription="@string/logo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logonabdi"
        android:id="@+id/imageViewLogo"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:contentDescription="add escorts pic "
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/escorts"
        android:id="@+id/imageViewEsc"
        android:layout_alignTop="@+id/imageViewLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <TextView
        android:text="Add Escorts"
        android:textSize="22sp"
        android:scaleX="2.6"
        android:scaleY="2.5"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewEsc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:clickable="true"
        android:id="@+id/textViewAddEscorts" />

    <ImageView
        android:contentDescription="person picture"
        android:layout_width="40dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/person"
        android:id="@+id/imageViewUser"
        android:layout_marginTop="390dp"
        android:layout_marginStart="50dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:inputType="text"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint=" Enter name"
        android:id="@+id/editTextName"
        android:layout_marginTop="390dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:contentDescription="email picture"
        android:layout_width="40dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/email1"
        android:id="@+id/imageViewEmail"
        android:layout_marginTop="440dp"
        android:layout_marginStart="50dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="#FFFFFF"
        android:inputType="textEmailAddress"
        android:hint=" Enter email"
        android:ems="10"
        android:layout_marginTop="440dp"
        android:id="@+id/editTextEnail"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:inputType="phone"
        android:background="#FFFFFF"
        android:hint=" Enter phone number"
        android:ems="10"
        android:id="@+id/editTextPhone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="489dp" />


    <ImageView
        android:contentDescription="phone picture"
        android:layout_width="40dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/mobilepic"
        android:id="@+id/imageViewPhone"
        android:layout_marginTop="489dp"
        android:layout_marginStart="50dp"
         />


    <Button

        android:layout_width="70dp"
        android:layout_height="50dp"
        android:id="@+id/escorts"
        android:background="@drawable/user"
        android:backgroundTint="#FFFFFF"
        android:layout_alignBottom="@+id/Measure"
        android:layout_toStartOf="@+id/imageViewEsc"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="14dp" />


    <TextView
        android:text="Measure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView4"
        android:textSize="20sp" />

    <TextView
        android:text="ecscorts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignEnd="@+id/escorts"
        android:id="@+id/textView5"
        android:textSize="20sp" />

    <TextView
        android:text="alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/alarPic"
        android:layout_marginEnd="10dp"
        android:textSize="20sp" />

    <Button

        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/Measure"
        android:background="@drawable/m2"
        android:backgroundTint="#FFFFFF"
        android:layout_above="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />



    <Button

        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/alarPic"
        android:background="@drawable/alert122"
        android:layout_marginStart="15dp"
        android:layout_alignBottom="@+id/escorts"
        android:layout_toEndOf="@+id/imageViewEsc" />


</RelativeLayout>
