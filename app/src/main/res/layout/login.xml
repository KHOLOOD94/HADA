<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main23"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#c3c3c3"
    tools:context="com.example.samsung.mypic1.Login">

    <ImageView
        android:layout_width="450px"
        android:layout_height="450px"
        app:srcCompat="@drawable/glb"
        android:id="@+id/imageViewLogo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/nabdhi" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NABDHI"
        android:textSize="4mm"
        android:id="@+id/nabdhi"
        android:layout_alignBottom="@+id/imageViewLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp" />

    <ImageView
        android:layout_width="450px"
        android:layout_height="450px"
        app:srcCompat="@drawable/login"
        android:id="@+id/imageViewLogin"
        android:layout_marginTop="55dp"
        android:layout_alignTop="@+id/nabdhi"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="114dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:inputType="text|date"
        android:ems="10"
        android:id="@+id/Username"
        android:hint=" User name"
        android:layout_below="@+id/imageViewLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp" />

    <ImageView
        android:layout_width="100px"
        android:layout_height="100px"
        app:srcCompat="@drawable/person"
        android:id="@+id/imageViewUser"
        android:layout_marginEnd="24dp"
        android:layout_alignTop="@+id/Username"
        android:layout_toStartOf="@+id/Username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:background="#FFFFFF"
        android:id="@+id/password"
        android:hint=" Password"
        android:layout_alignTop="@+id/imageViewKey"
        android:layout_toEndOf="@+id/imageViewUser"
        android:layout_marginTop="8dp" />

    <ImageView
        android:layout_width="150px"
        android:layout_height="150px"
        app:srcCompat="@drawable/key"
        android:id="@+id/imageViewKey"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/imageViewUser"
        android:layout_alignEnd="@+id/imageViewUser" />

    <Button
        android:id="@+id/LoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp"
        android:onClick="login"
        android:scaleX="1.4"
        android:scaleY="1.5"
        android:text="       Login       "
        android:textColor="#d22222"
        android:textSize="4mm" />
</RelativeLayout>
