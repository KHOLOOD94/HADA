<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main22"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#c3c3c3"
    tools:context="com.example.samsung.mypic1.Register">

    <ImageView
        android:contentDescription="@string/logo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logonabdi"
        android:id="@+id/imageViewLogo"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:contentDescription="register pic"
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/sin"
        android:id="@+id/imageViewLogin"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/imageViewLogo"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:contentDescription="user pic"
        android:layout_width="40dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/person"
        android:id="@+id/imageViewUser"
        android:layout_above="@+id/email"
        android:layout_toStartOf="@+id/Username"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="6dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="#FFFFFF"
        android:inputType="text|date"
        android:ems="10"
        android:id="@+id/Username"
        android:hint=" Enter username"
        android:layout_below="@+id/imageViewLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="#FFFFFF"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:hint=" Enter email"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/Username"
        android:layout_alignStart="@+id/Username" />

    <ImageView
        android:contentDescription="email pic"
        android:layout_width="40dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/email1"
        android:id="@+id/imageViewEmail"
        android:layout_below="@+id/imageViewUser"
        android:layout_alignStart="@id/imageViewUser"
        android:layout_marginTop="12dp" />



    <ImageView
        android:contentDescription="key pic"
        android:layout_width="40dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/key"
        android:id="@+id/imageView9Password"
        android:layout_below="@+id/imageViewEmail"
        android:layout_alignStart="@+id/imageViewEmail"
        android:layout_marginTop="24dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="#FFFFFF"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:hint=" Enter password"
        android:layout_alignStart="@+id/email"
        android:layout_marginTop="-14dp"
        android:layout_alignTop="@+id/imageView9Password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="#FFFFFF"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/confirmPassword"
        android:hint=" Comfirm password"
        android:layout_below="@+id/imageView9Password"
        android:layout_alignStart="@+id/password"
        android:layout_marginTop="-2dp" />

    <ImageView
        android:contentDescription="key pic"
        android:layout_width="40dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/key"
        android:id="@+id/imageViewPassword1"
        android:layout_alignTop="@+id/confirmPassword"
        android:layout_alignStart="@id/imageView9Password"
        android:layout_marginTop="2dp"/>


    <Button
        android:id="@+id/buttonCreateAcc"
        android:layout_width="174dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="430dp"
        android:onClick="createAccountBut"
        android:scaleX="1.3"
        android:scaleY="1.2"
        android:text=" Create Accounte "
        android:textColor="#d22222"
        android:textSize="14sp" />
</RelativeLayout>
